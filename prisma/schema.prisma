generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db.sqlite"
}

model Category {
  id    String  @id
  name  String
  posts Post[]
  show  Boolean @default(true)
}

model Post {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  review Boolean
  top    Boolean @default(false)
  likes  Int     @default(0)

  name      String
  anonymous Boolean
  content   String

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String

  comments Comment[]
}

model LovePost {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  review Boolean
  top    Boolean @default(false)
  likes  Int     @default(0)

  anonymous  Boolean
  fromName   String?
  fromGender String?
  toName     String
  toGender   String
  content    String

  comments Comment[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  review Boolean
  likes  Int     @default(0)

  name      String
  anonymous Boolean
  content   String

  post   Post?   @relation(fields: [postId], references: [id])
  postId String?

  lovePost   LovePost? @relation(fields: [lovePostId], references: [id])
  lovePostId String?

  comments  Comment[] @relation("CommentComments")
  comment   Comment?  @relation("CommentComments", fields: [commentId], references: [id])
  commentId Int?
}

model Settings {
  id Int @id @default(0)

  adminPassword String @default("")

  school String @default("")

  reviewPost    Boolean @default(true)
  reviewComment Boolean @default(true)
}
